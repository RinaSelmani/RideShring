<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import
                type="android.view.View"/>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:padding="@dimen/size_10"
            android:background="@drawable/rounded_corners"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/size_10"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vertical_guideline_30"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.3"
                android:layout_height="match_parent"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/horizontal_guideline_30"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2"
                android:layout_height="match_parent"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/horizontal_guideline_60"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5"
                android:layout_height="match_parent"/>

        <ImageView
                android:id="@+id/profile_image_view"
                android:layout_width="100dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_girl"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/vertical_guideline_30"
                android:layout_height="100dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:text="Rina Selmani"
                android:gravity="center"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/vertical_guideline_30"
                android:layout_marginTop="@dimen/size_10"
                app:layout_constraintTop_toBottomOf="@id/profile_image_view"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:text="Pristina - Ferizaj"
                app:layout_constraintStart_toEndOf="@id/vertical_guideline_30"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="@id/horizontal_guideline_30"
                android:textSize="@dimen/text_size_20"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:text="Golf 5"
                app:layout_constraintBottom_toBottomOf="@id/horizontal_guideline_60"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_10"
                app:layout_constraintStart_toEndOf="@id/vertical_guideline_30"
                android:layout_height="wrap_content"/>

        <ImageView
                android:layout_width="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_car"
                android:layout_marginRight="@dimen/size_10"
                app:layout_constraintBottom_toBottomOf="@id/horizontal_guideline_60"
                app:layout_constraintTop_toBottomOf="@id/horizontal_guideline_30"
                android:layout_height="80dp"/>

        <TextView
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="@id/horizontal_guideline_60"
                android:textSize="@dimen/text_size_20"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="#1D2952"
                android:text="30.05.2019 \n 22:10"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_10"
                app:layout_constraintStart_toEndOf="@id/vertical_guideline_30"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/horizontal_guideline_60"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="3"
                android:textColor="@color/blue"
                android:textSize="40sp"
                android:layout_marginRight="@dimen/size_5"
                app:layout_constraintEnd_toStartOf="@id/seats_imageview"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/seats_imageview"
                android:layout_width="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_seat"
                android:layout_marginRight="@dimen/size_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/horizontal_guideline_60"
                android:layout_height="50dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>